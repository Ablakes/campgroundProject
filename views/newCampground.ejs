<% include partials/header %>


    <div class="container">
        <h1 style="text-align:center; margin: 25px;">Create a New Campground</h1>
        <div style="width: 300px; margin: 0 auto;">
            <form action="/campgrounds" method="POST" >
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Campsite Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary form-control" href="/campgrounds">
                </div>
            </form>
            <a href="/">Go Back</a>
        </div> 
    </div>
